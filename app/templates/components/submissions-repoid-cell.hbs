{{#each displayIds as |idInfo index|}}
  <ul class="repoid-cell">
    {{#if idInfo.url}}
      {{#each idInfo.ids as |id|}}
        <a href="{{idInfo.url}}" target="_blank">
          <li title="{{id.title}}">{{id.display}}</li>
        </a>
      {{/each}}
      </ul>
    {{else}}
      {{#each idInfo.ids as |id|}}
        <li title="{{id.title}}">{{id.display}}</li>
      {{/each}}
    </ul>
  {{/if}}
{{else}}
  <span class="nodata-placeholder">Not available</span>
{{/each}}
